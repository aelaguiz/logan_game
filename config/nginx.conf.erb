worker_processes 1;

events {
  worker_connections 1024;
}

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile      on;
  gzip          on;

  server {
    listen       <%= ENV["PORT"] %>;
    server_name  _;

    root /app;
    index hanoi3d.html;

    location / {
      try_files $uri /hanoi3d.html;
    }

    location ~* \.(js|css|png|jpg|jpeg|gif|svg|ico|ttf|otf|woff|woff2)$ {
      expires 1y;
      add_header Cache-Control "public";
      try_files $uri =404;
    }

    error_page 404 /hanoi3d.html;
  }
}


